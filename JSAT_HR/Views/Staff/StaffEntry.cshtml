                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12 text-center">
        <div class="card border-bottom-success shadow h-100">
            <div class="card-body">
                <div class="text-s font-weight-bold text-custom1 text-uppercase mb-1"><button class="btn btn-success col-xl-3"><i class="fa fa-save"></i>&nbsp; Save</button></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        SelectDepartment();
        SelectSubDivision();
        });

    function SelectDepartment() {
            $.ajax({
                url: "../Department/GetDepartment",
                type: "GET",
                dataType: "JSON",
                dataSrc: '',
                success: function (items) {
                    $.each(items, function (i, item) {
                        $("#ddlDepartment").append(
                            $('<option></option>').val(item.DepartmentCD).html(item.DepartmentName));
                    });                    
                }
            });
    } // data bind in Program dropdownlist.

    function SelectSubDivision() {
        $.ajax({
            url: "../SubDivision/GETSubDivision",
            type: "GET",
            dataType: "JSON",
            dataSrc: '',
            success: function (items) {
                $.each(items, function (i, item) {
                    $("#ddlSubDivision").append(
                        $('<option></option>').val(item.SubDivisionCD).html(item.SubDivision));
                });
            }
        });
    }
</script>
}
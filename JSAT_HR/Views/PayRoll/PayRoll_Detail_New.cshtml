</div>

<style>
    tr:nth-child(even) {
        background-color: azure;
    }
    td{
        padding-left:18px;
    }
</style>

@section Scripts{
    <script>

        $(document).ready(function () {
            var sid = '@ViewBag.Staffid';
            if (sid == null || sid == "") {
                var d = new Date();
                var month = fixDigit(d.getMonth() + 1);
                var year = d.getFullYear();
                $('#ddlYear').val(year);
                $('#ddlMonth').val(month);
                SelectStaff(0);
            }
            else {
                var arr;
                var YYYY; var MM; var StaffID;
                if (sid != null) {
                    arr = sid.split('_');
                    YYYY = arr[0];
                    MM = arr[1];
                    StaffID = arr[2];
                    $('#ddlYear').val(YYYY);
                    $('#ddlMonth').val(MM);
                    SelectStaff(StaffID);
                    _Search(StaffID);
                }
            }
            CheckReadOnly();
        });

        function fixDigit(val) {
            return val.toString().length === 1 ? "0" + val : val;
        }

          function SelectStaff(x) {
             $.ajax({
                 url: '@Url.Action("GetStaff", "Staff", new { @id = "ID" })'.replace("ID", 1),
                 type: "GET",
                 dataType: "JSON",
                 dataSrc: '',
                 success: function (items) {
                     $.each(items, function (i, item) {
                         $("#ddlStaff").append(
                             $('<option></option>').val(item.StaffID).html(item.Name));
                     });
                     $('#ddlStaff').val(x);
                 }
             });
        }

        function Report() {
            var year = $('#ddlYear').val();
            var month = $('#ddlMonth').val();
            var stid = $('#ddlStaff').val();
            var yearmonth = year + month + stid;
            window.open('@Url.Action("PayRoll_Detail_Report", "PayRoll")?id=' + yearmonth);
        }

        function _Search(x) {
                var YYY;
                var MM;
                var staffID;
                YYY = $("#ddlYear").val();
                MM = $("#ddlMonth").val();
                if (x == 0) {
                    staffID = $("#ddlStaff").val();
                }
                else {
                    staffID = x;
                }     
                $.ajax({
                    type: 'POST',
                    url:'@Url.Action("_PayRoll_Detail_Search", "PayRoll", new { @id = "ID" })'.replace("ID", YYY + '_' + MM + '_' + staffID),
                    dataType: 'json',
                    success: function (json) {
                        if (json == null || json == "") {                         
                            $(".dynamicAtt").remove();
                            alert("There is no data.");
                             //window.location.href =  '@Url.Action("PayRoll_Detail_New", "PayRoll")'
                        }
                        else {
                            Fill_PayRoll(json);
                        }

